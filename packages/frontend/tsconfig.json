{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "jsx": "preserve",
        "noEmit": true,
        "isolatedModules": true,
        "types": ["jest", "node"],
        "allowJs": true
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
    "exclude": [
        "node_modules",
        "jest.config.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "next.config.js",
        "sentry.client.config.js",
        "sentry.server.config.js"
    ]
}
