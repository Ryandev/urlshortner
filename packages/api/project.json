{
    "name": "api",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/api/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/webpack:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "dist/packages/api",
                "main": "packages/api/src/main.ts",
                "tsConfig": "packages/api/tsconfig.app.json",
                "assets": ["packages/api/src/assets"]
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false
                },
                "development": {
                    "optimization": false,
                    "extractLicenses": true,
                    "inspect": true
                }
            }
        },
        "serve": {
            "executor": "@nrwl/js:node",
            "options": {
                "buildTarget": "api:build:development",
                "host": "localhost",
                "port": 9229,
                "inspect": "inspect",
                "watch": true
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/api/**/*.ts"],
                "maxWarnings": 0
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/api/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
