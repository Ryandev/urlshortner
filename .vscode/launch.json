{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "DEBUG: frontend",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}/packages/frontend/pages",
            "osx": {
                "runtimeArgs": [
                    // https://peter.sh/experiments/chromium-command-line-switches/
                    "--disk-cache-dir=${workspaceRoot}/.cache/betachrome",
                    "--user-data-dir=${workspaceRoot}/.data/betachrome"
                ]
            },
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs",
                "--remote-debugging-port=9222",
                "--allow-insecure-localhost",
                "--aggressive-cache-discard",
                "--disable-notifications",
                "--disable-session-crashed-bubble",
                "--disable-infobar",
                "--disable-restore-session-state",
                "--unsafely-treat-insecure-origin-as-secure",
                "--allow-insecure-localhost",
                "--enable-logging",
                "--v=1"
            ]
        },
        {
            "name": "DEBUG: API",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "trace": true,
            "preLaunchTask": "api: serve",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**",
                "dist/packages/api/**"
            ]
        },
        {
            "name": "TEST (ALL): api",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "test",
                "--config=${workspaceRoot}/packages/api/jest.config.ts",
                "--runInBand",
                "--watchAll",
                "--coverage=false",
                "--no-cache"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            },
            "env": { "NODE_TLS_REJECT_UNAUTHORIZED": "0" }
        },
        {
            "name": "TEST (CUR-FILE): api",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--config=${workspaceRoot}/packages/api/jest.config.ts",
                "--runInBand",
                "--watchAll",
                "--coverage=false",
                "--no-cache"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            },
            "env": { "NODE_TLS_REJECT_UNAUTHORIZED": "0" }
        },
        {
            "name": "TEST (ALL): shared",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "test",
                "--config=${workspaceRoot}/packages/shared/jest.config.ts",
                "--runInBand",
                "--watchAll",
                "--coverage=false",
                "--no-cache"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            },
            "env": { "NODE_TLS_REJECT_UNAUTHORIZED": "0" }
        },
        {
            "name": "TEST (CUR-FILE): shared",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--config=${workspaceRoot}/packages/shared/jest.config.ts",
                "--runInBand",
                "--watchAll",
                "--coverage=false",
                "--no-cache"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            },
            "env": { "NODE_TLS_REJECT_UNAUTHORIZED": "0" }
        }
    ]
}
